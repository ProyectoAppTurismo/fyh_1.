<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/icono_inicio2"
    android:scaleType="fitCenter"
    tools:context=".OpcionesRadioButton">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alwaysDrawnWithCache="false"
        android:animateLayoutChanges="false"
        android:orientation="vertical"
        android:paddingLeft="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="397dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="68dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:textColor="#CF6C61"
                        android:shadowColor="#000000"
                        android:shadowRadius="10"
                        android:shadowDx="2"
                        android:shadowDy="5"
                        android:text="Empecemos por tu compañia en el viaje"
                        android:textSize="30sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="match_parent"
                android:layout_height="217dp"
                android:orientation="vertical"
                android:paddingLeft="30dp"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="129dp">

                <RadioGroup
                    android:layout_width="300dp"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/solo"
                        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_radio"
                        android:checked="true"
                        android:clickable="true"
                        android:cursorVisible="true"
                        android:focusable="auto"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="Sol@"
                        android:textSize="24sp"
                        android:visibility="visible"
                        tools:visibility="visible" />

                    <RadioButton
                        android:id="@+id/pareja"
                        style="@style/Widget.AppCompat.CompoundButton.RadioButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:bufferType="normal"
                        android:button="@android:drawable/btn_radio"
                        android:checked="false"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="Pareja"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/familia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_radio"
                        android:checked="false"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="Familia"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/amigos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_radio"
                        android:checked="false"
                        android:cursorVisible="false"
                        android:duplicateParentState="false"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="Amig@s"
                        android:textSize="24sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#CF6C61"
                    android:shadowColor="#000000"
                    android:shadowRadius="10"
                    android:shadowDx="2"
                    android:shadowDy="5"
                    android:text="¿Te apetece playa o prefieres interior?"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="144dp"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="361dp"
                    android:layout_height="118dp"
                    android:paddingLeft="30dp">

                    <RadioButton
                        android:id="@+id/interior"
                        android:layout_width="match_parent"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_radio"
                        android:checked="true"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="Interior"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/costa"
                        android:layout_width="match_parent"
                        android:layout_height="5dp"
                        android:layout_weight="1"
                        android:baselineAligned="false"
                        android:button="@android:drawable/btn_radio"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="Costa"
                        android:textSize="24sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="77dp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textColor="#CF6C61"
                    android:shadowColor="#000000"
                    android:shadowRadius="10"
                    android:shadowDx="2"
                    android:shadowDy="5"
                    android:text="¿Cuanto te quieres gastar?"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="162dp"
                android:orientation="horizontal">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="147dp"
                    android:paddingLeft="30dp">

                    <RadioButton
                        android:id="@+id/precio_bajo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_radio"
                        android:checked="true"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="€"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/precio_medio"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_radio"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="€€"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/precio_alto"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_radio"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="€€€"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:padding="20dp"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="Precio"
                        android:textSize="30sp" />

                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="157dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="188dp"
                    android:padding="20dp"
                    android:paddingLeft="20dp"
                    android:textStyle="bold"
                    android:textColor="#CF6C61"
                    android:shadowColor="#000000"
                    android:shadowRadius="10"
                    android:shadowDx="2"
                    android:shadowDy="5"
                    android:text="¿Cuanta afluencia de público sería apropiada para ti?"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="232dp"
                android:orientation="vertical"
                android:paddingBottom="10dp">

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingLeft="30dp">

                    <RadioButton
                        android:id="@+id/baja"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_radio"
                        android:checked="true"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="Me gustan los sitios tranquilos"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/media"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_radio"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="Ni mucho ni poco"
                        android:textSize="24sp" />

                    <RadioButton
                        android:id="@+id/alta"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:button="@android:drawable/btn_radio"
                        android:paddingLeft="20dp"
                        android:textStyle="bold"
                        android:text="Me gusta el jaleo!"
                        android:textSize="24sp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:orientation="vertical">

                <Spinner
                    android:id="@+id/TipoDeTurismo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:entries="@array/tipos"
                    android:paddingLeft="30dp"
                    android:backgroundTint="#CF6C61"
                    android:background="#000"
                    android:shadowColor="#000000"
                    android:shadowRadius="10"
                    android:shadowDx="2"
                    android:shadowDy="5"
                    android:spinnerMode="dropdown" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="266dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="50dp"
                android:paddingTop="50dp">

                <Button
                    android:id="@+id/siguiente"
                    android:layout_width="215dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginEnd="160dp"
                    android:layout_marginRight="160dp"
                    android:layout_marginBottom="136dp"
                    android:text="Realizar consulta"
                    app:layout_constraintBottom_toTopOf="@+id/nav_view"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.987"
                    app:layout_constraintStart_toStartOf="parent" />

                <Button
                    android:id="@+id/maps"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="VER EN MAPA" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
